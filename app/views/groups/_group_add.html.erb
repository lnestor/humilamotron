<div class="modal fade" id="group-add" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Is this your group?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-9">
            <p><%= group_name %></p>
          </div>
          <div class="col-3">
            <%= image_tag(group_image, size: 64, class: 'mb-3') if group_image %>
          </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <%= form_tag '/groups/create', method: :post do %>
          <%= hidden_field_tag 'groupme_id', groupme_id %>
          <%= submit_tag 'Create Group', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
